{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "./dist/main",
    "rootDir": "./src/main",
    "lib": ["es2020"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/renderer/**/*"
  ]
}